<header>
    <h1>@heading</h1>

    @if (headerLink != null)
    {
        <div flex="column" justify-content="center">
            <a href="@headerLink.Href">@headerLink.Label</a>
        </div>
    }
</header>

@code {
    [Parameter] public string? heading { get; set; } = null;
    [Parameter] public Anchor? headerLink { get; set; } = null;
}
