@rendermode InteractiveWebAssembly
@inject IAuthService authService

<TableWrapper>
    <LabeledInputTableRow label="Email Address:" type="email" @bind-value="@signUpRequest.Email" />
    <LabeledInputTableRow label="User Name:" type="text" @bind-value="@signUpRequest.Username" />
    <LabeledInputTableRow label="Password:" type="password" @bind-value="@signUpRequest.Password" />
    <LabeledInputTableRow label="Confirm Password:" type="password" />
    <TableFormFooter>
        - I certify I am over 13 years old
        <br />
        <input type="submit" value="Sign Up" @onclick="@requestSignUp" @onclick:preventDefault />
    </TableFormFooter>
</TableWrapper>

@code {
    private SignUpRequest signUpRequest { get; set; } = new();

    private async Task requestSignUp()
    {
        await authService.RequestSignUpAsync(signUpRequest);
    }
}
